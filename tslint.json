{
  "rules": {
    /* ng2 rules */

    "directive-selector-name": [true, "camelCase"],
    "component-selector-name": [false, "kebab-case"],
    "directive-selector-type": [true, "attribute"],
    "component-selector-type": [true, "element"],
    "directive-selector-prefix": [false, "todo"],
    "component-selector-prefix": [false, "todo"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": false,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref" :true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [false, "camelCase", "todo"],
    "component-class-suffix": true,
    "directive-class-suffix": true,

    "no-empty": false, /* this is an eslint rule */

    /* the following rules are tslint rules */
    "class-name": true,
    "comment-format": [
      false,
      "check-space"
    ],
    "indent": [
      false,
      "spaces"
    ],
    "no-duplicate-variable": false,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": false,
    "no-var-keyword": false,
    "one-line": [
      false,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      false,
      "double"
    ],
    "triple-equals": [
      false,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ]
  }
}
